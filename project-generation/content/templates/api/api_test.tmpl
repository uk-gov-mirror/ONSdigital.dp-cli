func createAuthenticatedRequest(method, url string, body io.Reader) *http.Request {
    r, err := http.NewRequest(method, url, body)
    ctx = r.Context()
    ctx = common.SetCaller(ctx, "email@ons.gov.uk")
    r = r.WithContext(ctx)
    
    So(err, ShouldBeNil)
    return r
}

